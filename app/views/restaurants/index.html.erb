<h1>Home Page</h1>

<%= link_to 'Add to Restaurants', new_restaurant_path, class: "badge border rounded bg-white" %>
<% @restaurants.each do |item| %>
<div class = 'container bg-white d-flex w-50 my-3 rounded p3'>
  <p class ="mt-3"><%= item.id %> <%= link_to item.name, restaurant_path(item), class: "badge" %> </p>
  <p class ="mt-3">  - <%= item.category %> </p>
</div>
<% end %>